<script  type="text/javascript">
  $(document).ready(function () {
    function inIframe() {
      try {
        if (window.self !== window.top) {
          //IN IFRAME
          $('.iFrameSection').hide();
          window.location = 'login.aspx';
        }
        else {
          //NOT IN IFRAME
        }
