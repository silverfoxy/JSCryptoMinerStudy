}

function showPopUp(event){
	event.preventDefault();
	var $popUp = $('<div>', { 'class': 'popUp'});
	$popUp.append($('<a class="popupClose" title="close" href="#" onclick="hidePopUp();return false;"><i class="icon-progress-completed"></i><i class="icon-cancel"></i></a>'));
	$popUp.append(event.data.thisHTML);
	$("#outerWrap").append($popUp);
        var popWidth = $('#footerWrap').width() - 40;
        if(popWidth > 810){popWidth = 810}
	$popUp.width(popWidth);
	var h = $(window).height();
	var st = $(window).scrollTop();
	var iot = $('#headerInner').offset().top;
	var iw = $('#pageContent').width();
	var popUph = $popUp.height();
	var popUpw = $popUp.width();
	var poh = $popUp.outerHeight(true);
	var pow = $popUp.outerWidth(true);
	$popUp.css({'position':'absolute'});
	var posTop = (h/2) - (poh/2) + st - iot;
	if (posTop<st + 40){posTop=st + 40};
	$popUp.css({'position':'absolute','width':popUpw, 'height': popUph, 'left': (iw/2) - (pow/2), 'top':posTop, 'z-index':15});
//	$('#innerWrap').css({'z-index':12})
	$('#overlay').css({'z-index':13}).show().attr('onclick','hidePopUp()');
	if (event.data.isVideo){
		doVideo('#player1');
	}
}
function hidePopUp(){
	$('#overlay').removeAttr('style');
