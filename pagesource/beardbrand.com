        if (video_tracker === 0) {
          video_tracker = setInterval(on_player_progress, 500);
        }
      }

      function stop_video_tracker() {
        video_tracker = 0;
        clearInterval(video_tracker);
      }

      function on_player_ready() {
        start_video_tracker();
      }

      function on_player_state_change(event) {
        var playing = event.data == YT.PlayerState.PLAYING;
        var paused = event.data == YT.PlayerState.PAUSED;
        var ended = event.data == YT.PlayerState.ENDED;
        var video_data = event.target.getVideoData();

        switch (event.data) {
