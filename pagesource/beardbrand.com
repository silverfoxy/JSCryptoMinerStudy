(function ($, Breakpoint) {
  window.onYouTubePlayerAPIReady = function() {
    var videos = $(".js-youtube-video");
    var video_last_action = "";

    videos.each(function () {
      var video = $(this);
      var video_iframe = video.find("iframe");
      var video_img = video.find("img");
      
      if (!video_iframe.length || !video_iframe[0] || !video_iframe[0].src || video_iframe[0].src.indexOf('enablejsapi=') === -1 ) {
        return;
      }
      
      var video_id = video_iframe[0].getAttribute("id").replace("youtube-","");
      var video_start_time = 0;
      var video_last_progress = 0;
      var video_play_count = 0;
      var video_tracker = 0;

      function toggle_video() {
        video_img.toggle();
        video_iframe.toggle();
      }

      if ( Breakpoint.medium_down ) {
        $(document).on("click", this, function () {
          toggle_video();
        });
