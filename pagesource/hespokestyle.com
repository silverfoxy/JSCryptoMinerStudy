		        if (! window.fwp_is_paging) {
		            window.fwp_page = 1;
		            FWP.extras.per_page = 'default';
		        }

		        window.fwp_is_paging = false;
		    });

		    $(document).on('facetwp-loaded', function() {
		    	$('.facetwp-template').css({paddingBottom : "0px"});
		    	var taskFired  = false;
				function loadMore() {
				    var rows_loaded = (window.fwp_page * 15);
		            if (rows_loaded < window.fwp_total_rows) {
		            	$('.facetwp-template').css({paddingBottom : "854px"});
		                window.fwp_page++;
		                window.fwp_is_paging = true;
		                FWP.extras.per_page = (window.fwp_page * window.fwp_default_per_page);
		                FWP.soft_refresh = true;
		                FWP.refresh();
		            }
		            $('.scroll_up').addClass('show');
				}
				function rePause() {
					taskFired  = false;
				}
				window.fwp_total_rows = FWP.settings.pager.total_rows;
		        if (! FWP.loaded) {
		            window.fwp_default_per_page = 15;
					$(window).scroll(function(){
					    if($(window).scrollTop() >= ($(document).height() - 1500) - $(window).height()){
					        if(!taskFired){
					            taskFired = true;
					            loadMore();
					            setTimeout(rePause, 4000);
					        }
					    }
					});
		        }
		    });
		})(jQuery);
