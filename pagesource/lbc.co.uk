            }
        }
        return null;
    };

    // Attempt to read adtest param
    var adtest = "";
    try {
        var url_vars = get_url_vars()["adtest"];
        if (typeof url_vars != 'undefined') {
            adtest = url_vars;
        }
    }
    catch(err) {}

    // Attempt to read Krux segments
    var krux_segments = "";
    try {
        krux_segments = window.Krux.segments.join(":");
    }
    catch(err) {}

    // Read and add callback for populating Nielsen segments
    if(window.gusto.nielsen) {
        var nmc_segments = window.gusto.nielsen.segments.split(',').join(":");
        window.gusto.nielsen.callbacks.push(function(){
            window.GLOBALADVERTISING.nmc = window.gusto.nielsen.segments.split(',').join(":");
        });
    }

    // Set page count from cookie
    var pageCount = 1;
    var pageCountCookie = readCookie('pagecount');
    if (pageCountCookie) {
        pageCount = parseInt(pageCountCookie, 10) + 1;
    }
    createCookie('pagecount', pageCount);

    // Read UA String to allow optional logging or disabling of ad logic
    // Very useful for AT suite and debugging live
    var ua_string = window.navigator.userAgent;
    var log_ads = ua_string.indexOf('LOGGUSTOADS') > -1;

    // Return the advertisting object
    var section_array = get_section_array("/");
    var ad_config = {
        'local': null,
        'at': get_breakpoint(),
        'gigyaid': null, // Intentionally null, don't use this
        'loginstate': get_user() ? "true" : "false", // Not always correct but it's updated ASAP
        'section': section_array.join("/"),
        'level': section_array.length,
        'pageid': window.gusto.page_id,
        'krx': krux_segments,
        'pagecount': pageCount,
        'contenttype': "",
        'adtest': adtest,
        'sensitive': "false",
        'newslink': "false",
        'nmc': nmc_segments
    };

    if(log_ads) {
        console.log("The following ad values has been configured", ad_config);
        if(window.ADTECH) {
            window.ADTECH.debugMode = true;
        }
    }

    return ad_config;
})();
</script>

        
